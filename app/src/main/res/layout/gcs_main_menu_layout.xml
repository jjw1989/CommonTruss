<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <FrameLayout
    android:id="@+id/main_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/navigateTabBar" />

    <com.powervision.gcs.view.MainNavigateTabBar
    android:id="@+id/navigateTabBar"
    android:layout_width="match_parent"
    android:layout_height="50.0dp"
    android:layout_alignParentBottom="true"
    app:containerId="@+id/main_container"
    app:navigateTabSelectedTextColor="@color/select_text"
    app:navigateTabTextColor="@color/unselect_text"
    app:navigateTabTextSize="12sp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigateTabBar"
        android:background="@mipmap/comui_bar_top_shadow" />

</RelativeLayout>
